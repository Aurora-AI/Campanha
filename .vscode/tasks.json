{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "üß¨ Aurora: Criar Nova OS",
			"type": "shell",
			"command": "code docs/os/OS-$(date +%Y%m%d)-NOVA.md",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "üõ°Ô∏è Aurora: Validar OS (Logic Gate)",
			"type": "shell",
			"command": "./scripts/validate-os.sh \"${file}\"",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "üß† Aurora: Commit Cognitivo (Apenas OS)",
			"type": "shell",
			"command": "./scripts/validate-os.sh \"${file}\" && git add \"${file}\" && git commit -m \"docs(os): atualiza√ß√£o da mem√≥ria cognitiva ${fileBasenameNoExtension}\"",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "guard:docs",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/scripts/guard/verify_docs.sh"
			],
			"windows": {
				"command": "powershell",
				"args": [
					"-NoProfile",
					"-ExecutionPolicy",
					"Bypass",
					"-File",
					"${workspaceFolder}\\scripts\\guard\\verify_docs.ps1"
				]
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "guard:docs:init",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/scripts/guard/verify_docs.sh",
				"--init"
			],
			"windows": {
				"command": "powershell",
				"args": [
					"-NoProfile",
					"-ExecutionPolicy",
					"Bypass",
					"-File",
					"${workspaceFolder}\\scripts\\guard\\verify_docs.ps1",
					"--init"
				]
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "guard:frontend",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/scripts/guard/verify_frontend_contracts.sh"
			],
			"windows": {
				"command": "powershell",
				"args": [
					"-NoProfile",
					"-ExecutionPolicy",
					"Bypass",
					"-File",
					"${workspaceFolder}\\scripts\\guard\\verify_frontend_contracts.ps1"
				]
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "quality:typecheck",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"type-check"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "quality:lint",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"lint",
				"--if-present"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "quality:test",
			"type": "shell",
			"command": "npm",
			"args": [
				"test",
				"--if-present"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "alvaro:ingest",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\alvaro\\ingest\\ingest_artifacts.ps1"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "gate:all",
			"dependsOrder": "sequence",
			"dependsOn": [
				"guard:docs",
				"guard:frontend",
				"quality:typecheck"
			]
		},
		{
			"label": "dev: start server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}